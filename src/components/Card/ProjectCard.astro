---
import { getCollection } from "astro:content";

const {title, url, description, collab, img, alt} = Astro.props;
const Projects = await getCollection("projects", ({data}) => {
    let tags = data.tags;
    return tags = tags.join(" ");
});

---
<!--adesso si puÃ² fare la card -->
<div class={`column medium-1-2 large-1-3 xxlarge-1-4 card ${Projects}`}>
    <a href={url} class="item">
        <div class="image">
            <img src={img} alt={alt}>
            <div class="inner">
                <h2>{title}</h2>
            </div>
        </div>
        <div class="description">
                <h3>{description}</h3>
                <p>{collab}</p>
        </div>
    </a>
</div>