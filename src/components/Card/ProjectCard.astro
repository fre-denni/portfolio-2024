---
import { getCollection } from "astro:content";

const {title, url, description, collab, img, alt} = Astro.props;
const Projects = await getCollection("projects",({data}) => {
    return{
        ...data,
        tags: data.tags.join(" ")
    };
});

// Map over the Projects array and join the tags with a space
const projectTags = Projects.map(project => project.data.tags.join(" ")).join(" ");

---

<div class={`column medium-1-2 large-1-3 xxlarge-1-4 card ${projectTags}`}>
    <a href={url} class="item">
        <div class="image">
            <img src={img} alt={alt}>
            <div class="inner">
                <h2>{title}</h2>
            </div>
        </div>
        <div class="description">
                <h3>{description}</h3>
                <p>{collab}</p>
        </div>
    </a>
</div>