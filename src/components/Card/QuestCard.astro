---
const {url, img, alt, title, description, website} = Astro.props;
---

<div class="column medium-1-3 large-1-3 quest">
    <a href={url} class="quest-item">
        <div class="image">
            <img src={img} alt={alt}>
        </div>
        <div class="inner">
            <h3>{title}</h3>
            <p class="alt">{description}</p>
        </div>
    </a>
</div>