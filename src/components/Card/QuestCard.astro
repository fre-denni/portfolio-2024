---
const {url, img, alt, title, description, website} = Astro.props;
---

<div class="column medium-1-2 large-1-3 xxlarge-1-4 quest">
    <a href={url} class="item">
        <div class="image">
            <img src={img} alt={alt} width="1280" height="914">
            <div class="inner">
                <h2>{website}</h2>
            </div>
        </div>
        <div class="description">
            <h3>{title}</h3>
            <p class="alt">{description}</p>
        </div>
    </a>
</div>

