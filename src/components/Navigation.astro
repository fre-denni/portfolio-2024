---
import '@fontsource/geist-mono';
import '@fontsource/geist-sans';
import '../styles/global.css';
---
<div class="header">
    <div class="logo-box">
        <a href="/">
        <img class="logo" alt="fre-denni logo">
        </a>
    </div>
    <div class="navbar">
        <div class="menu-items">
            <p class="menu-item"><a href="/works/">works</a></p> 
            <p class="menu-item"><a href="/about/">who?</a></p>
            <img class="menu-icons" alt="navigation icons">
        </div>
    </div>
</div>
<script>
    document.querySelector('.menu-icons').addEventListener('click', () => {
      document.querySelector('.menu-items').classList.toggle('menu-item');
    });
  </script>