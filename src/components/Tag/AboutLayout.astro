---
import BaseLayout from "../layouts/BaseLayout.astro";
import Social from "../components/Footer/Social.astro";
import Interest from "../components/Content/Interest.astro";

import {Content as Experience} from '../components/Content/cv.md'
const {frontmatter} = Astro.props;
---

<BaseLayout>
    <div class="page-about">
            <section class="row">
                <div class="column large-1-5">
                    <h2>About Me</h2>
                </div>
                <div class="column medium-1-3 large-1-3 des">
                    <div class="inner">
                        <slot/>
                    </div>
                </div>
                <div class="column medium-1-3 large-1-3">
                    <div class="image">
                        <img loading="lazy" src={frontmatter.profilepic.url} alt={frontmatter.profilepic.alt} width="1280" height="914"/>
                    </div>
                </div>
            </section>
            <hr/>
            <section class="row">
                <div class="interests">
                    <Interest title="What I'm up to" content={frontmatter.upto}/>
                    <Interest title="What I love" content={frontmatter.love}/>
                    <Interest title="Currently obsessed with" content={frontmatter.obs} link={frontmatter.link.url} text={frontmatter.link.text}/>
                </div>
            </section>
            <hr />
            <section class="row">
                <div class="column medium-1-3 large-3-10 ">
                    <div class="cv">
                        <div class="row no-padding">
                            <div class="column large-1-2">
                                <h1>My journey so far... </h1>
                                <div class="image">
                                    <img loading="lazy" src={frontmatter.profilepic.url} alt={frontmatter.profilepic.alt}/>
                                </div>
                                <p class="alt">This is me trying not to butcher my speech at the <a href="">Gentler Future Festival</a> at Lisboa</p>
                                <h3>Look at my stats!</h3>
                            </div>
                            <div class="column small-1-2 medium-1-2">
                                {frontmatter.socials.map(social => (
                                    <Social platform={social.platform} username={social.username} width="1280" height="914"/>
                                ))}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="column medium-2-3 large-2-3 journey">
                    <Experience/> <!-- sistemare spazio tra titoli e paragrafi -->
                </div>
            </section>
            <hr/>
            <section class="row">

            </section>
    </div>
</BaseLayout>