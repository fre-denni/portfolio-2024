---
import BaseLayout from "../layouts/BaseLayout.astro";
import Social from "../components/Footer/Social.astro";
import Interest from "../components/Content/Interest.astro";
import QuestCard from "../components/Card/QuestCard.astro";

import {Content as Experience} from '../components/Content/cv.md'

const {frontmatter} = Astro.props;
---

<BaseLayout>
    <div class="page-about">
        <section class="row des">
            <div class="column medium-1-2 large-1-2">
                <div class="image">
                    <img loading="lazy" src={frontmatter.profilepic.url} alt={frontmatter.profilepic.alt} width="1280" height="914"/>
                </div>
            </div>
            <div class="column medium-1-2 large-1-2">
                <div class="inner">
                    <slot/>
                </div>
            </div>
        </section>
        <section class="row">
            <div class="interests">
                <Interest title="What I'm up to" content={frontmatter.upto}/>
                <Interest title="What I love" content={frontmatter.love}/>
                <Interest title="What I'm obsessed with" content={frontmatter.obs} link={frontmatter.link.url} text={frontmatter.link.text}/>
            </div>
        </section>
        <hr/>
        <section class="row">
            <div class="column large-3-4">
                <h2>My journey so far... </h2>
            </div>
            <div class="column medium-1-3 large-3-10 ">
                <div class="cv">
                    <div class="row no-padding">
                        <div class="column large-1-2">
                            <div class="image">
                                <img loading="lazy" src={frontmatter.cvpic.url} alt={frontmatter.cvpic.alt}/>
                            </div>
                            <p class="alt">This is me trying not to butcher my speech at the <a href="">Gentler Future Festival</a> at Lisboa, September 2023</p>
                            <h3>Lets connect!</h3>
                        </div>
                        <div class="column small-1-2 medium-1-2">
                            {frontmatter.socials.map(social => (
                                <Social platform={social.platform} username={social.username} width="1280" height="914"/>
                            ))}
                        </div>
                    </div>
                </div>
            </div>
            <div class="column medium-2-3 large-2-3 journey">
                <Experience/>
            </div>
        </section>
        <hr />
        <section class="row">
            <div class="column">
                <h2>Side-Quests</h2>
            </div>
            <div class="column">
                <div class="row quests">
                    <QuestCard
                        url=""
                        img="/images/hacko-1.png"
                        alt="digital garden"
                        website="W.I.P."
                        title="Building a Digital Garden!"
                        description="A functional space to share ideas and open-source projects"
                    />
                    <QuestCard
                        url=""
                        img="/images/hacko-2.png"
                        alt="cheffo"
                        website="W.I.P."
                        title="Building my Chef blog!"
                        description="I'm building a space where to collect and share my recipe, with interactive tools, a good excuse to learn Hugo and the mdx language"
                    />
                    <QuestCard
                        url=""
                        img="/images/knocknock.gif"
                        alt="docs"
                        website="W.I.P."
                        title="Improve my documentation!"
                        description="I've built this website from scratch, with no pochi grattacapi, so I decided to improve"
                    />
                    <QuestCard
                        url=""
                        img="/images/knocknock.gif"
                        alt="docs"
                        website="W.I.P."
                        title="Improve my documentation!"
                        description="I've built this website from scratch, with no pochi grattacapi, so I decided to improve"
                    />
                </div>
            </div>
        </section>
        <hr />
    </div>
</BaseLayout>


