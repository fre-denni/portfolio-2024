---
import BaseLayout from "../layouts/BaseLayout.astro";
import Social from "../components/Footer/Social.astro";

const {frontmatter} = Astro.props;
---

<BaseLayout>
    <div class="page-about">
            <section class="row">
                    <div class="column medium-1-2 large-1-2">
                        <div class="inner">
                            <slot/>
                        </div>
                    </div>
                <div class="column medium-1-2 large-1-2">
                    <div class="image">
                        <img loading="lazy" src={frontmatter.profilepic.url} alt={frontmatter.profilepic.alt} width="1280" height="914"/>
                    </div>
                    <div class="cv">
                        <div class="row small-padding">
                            <div class="column medium-1-3 large-1-2"><!--Empty--></div>
                            <div class="column medium-3-10 large-1-4">
                                <h3>Look at my stats!</h3>
                            </div>
                            <div class="column small-3-4 medium-3-10 large-1-4">
                                {frontmatter.socials.map(social => (
                                    <Social platform={social.platform} username={social.username}/>
                                ))}
                            </div>
                        </div>
                    </div>
                </div>
            </section>
    </div>
    <hr />
</BaseLayout>