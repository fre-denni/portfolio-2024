---
import Social from "../components/Footer/Social.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
const {frontmatter} = Astro.props;
---

<BaseLayout>
    <div class="page-about">
        <div class="row">
            <div class="column large-1-3">
                <h1 class="show-large">{frontmatter.tagline}</h1>
            </div>
            <div class="column medium-1-2 large-1-3">
                <slot/>
            </div>
            <div class="column medium-1-2 large-1-3 team">
                <div class="image">
                    <img src={frontmatter.image.url} alt={frontmatter.image.alt}/>
                </div>
                <div class="row small-padding">
                    <div class="column small-1-3">
                        <Social platform={frontmatter.platform[0]} username={frontmatter.username[0]}/>
                    </div>
                    <div class="column small-1-3">
                        <Social platform={frontmatter.platform[1]} username={frontmatter.username[1]}/>
                    </div>
                    <div class="column small-1-3">
                        <Social platform={frontmatter.platform[2]} username={frontmatter.username[2]}/>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr/>
    <div><!-- here goes something interactive && fun--></div>
    </div>
</BaseLayout>


