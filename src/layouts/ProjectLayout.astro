---
import BaseLayout from "./BaseLayout.astro";

const {frontmatter} = Astro.props;
---
<BaseLayout>
    <div class="credits">
        <div class="row">
            <div class="column title">
                <div class="text">
                    <h1>{frontmatter.title}</h1>
                    <h3>{frontmatter.description}</h3>
                </div>
                <div class="image">
                    <img src={frontmatter.image.url} alt={frontmatter.image.alt} />
                </div>
                <hr/>
            </div>
            <div class="column small-1-2 medium-1-4 large-1-4 time">
                <p>Period:
                    <ul>
                        <li>{frontmatter.time}</li>
                    </ul>
                </p>
            </div>
                <div class="column small-1-2 medium-1-4 large-1-4 role">
                    <p>Role:</p>
                    <ul>
                        <li>{frontmatter.role[0]}</li>
                        <li>{frontmatter.role[1]}</li>
                        <li>{frontmatter.role[2]}</li>
                    </ul>
                </div>
                <div class="column small-1-2 medium-1-4 large-1-4 team">
                    <p>Team:</p>
                    <ul>
                        <li>{frontmatter.team[0]}</li>
                        <li>{frontmatter.team[1]}</li>
                        <li>{frontmatter.team[2]}</li>
                        <li>{frontmatter.team[3]}</li>
                        <li>{frontmatter.team[4]}</li>
                    </ul>
                </div>
                <div class="column small-1-2 medium-1-4 large-1-4 project-link">
                    <p>External Links:</p>
                    <ul>
                        <li><a href={frontmatter.links[0]} target="blank">{frontmatter.taglinks[0]}</a></li>
                        <li><a href={frontmatter.links[1]} target="blank">{frontmatter.taglinks[1]}</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="work-project">
        <slot />
    </div>
    <div class="work-related">
        <!--qui vanno messi progetti collegati per tag -->
    </div>
</BaseLayout>