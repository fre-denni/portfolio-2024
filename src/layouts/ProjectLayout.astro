---
import BaseLayout from "./BaseLayout.astro";

const {frontmatter} = Astro.props;
---
<BaseLayout>
    <div class="credits">
        <div class="row">
            <div class="column title">
                <div class="text">
                    <h1>{frontmatter.title}</h1>
                    <h3>{frontmatter.description}</h3>
                </div>
                <div class="image">
                    <img src={frontmatter.image.url} alt={frontmatter.image.alt} />
                </div>
            </div>
            <div class="column small-1-2 medium-1-4 large-1-4">
                <p>Period:
                    <ul>
                        <li>{frontmatter.time}</li>
                    </ul>
                </p>
            </div>
                <div class="column small-1-2 medium-1-4 large-1-4">
                    <p>Role:</p>
                    <ul>
                        {frontmatter.role.map(role => <li>{role}</li>)}
                    </ul>
                </div>
                <div class="column small-1-2 medium-1-4 large-1-4">
                    <p>Team:</p>
                    <ul>
                        {frontmatter.team.map(member => <li>{member}</li>)}
                    </ul>
                </div>
                <div class="column small-1-2 medium-1-4 large-1-4">
                    <p>External Links:</p>
                    <ul>
                        {frontmatter.links.map((link, index) => <li><a href={link} target="blank">{frontmatter.taglinks[index]}</a></li>)}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="work-project">
        <slot />
    </div>
    <div class="work-related">
        <!--qui vanno messi progetti collegati per tag -->
    </div>
</BaseLayout>